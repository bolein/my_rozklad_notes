{

  "manifest_version" : 2,
 "name": "My KPI Rozklad Notes", // Название расширения
 "version": "1.0", // Номер версии
 "description": "Extension for writing notes in kpi schedule", // Описание расширения

 "permissions": [
  "tabs", // Разрешить расширению работать с вкладками
  "storage",
  "http://rozklad.kpi.ua/*" // Разрешить расширению обращаться к указанному адресу
  ],

  "icons": { 
    "16":"images/logo16.png", 
    "48":"images/logo48.png", 
    "128":"images/logo128.png" 
    }, 

  "page_action":{      // действие для текущей страницы
    "default_title": "Load notes",
    "default_icon": "images/logo128.png"
    },

  "content_scripts":[{       //
   "matches": ["http://rozklad.kpi.ua/Schedules/ViewSchedule.aspx?g=*"],
   "css": ["style.css"],
   "js": ["jq.js", "autoresize.js", "script.js"]
   }]
 }